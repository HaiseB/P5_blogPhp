{% extends "layout.twig" %}

{% block head %}
    <title>Création d'un nouveau compte</title>
{% endblock head %}

{% block content %}
<form method="post" action="" class="jumbotron text-center">
    <fieldset>
        <legend>Création d'un compte</legend>
        <div class="col-md-8 offset-md-2">
            <span>Information du compte</span>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" name="name" required class="form-control" id="InputName" placeholder="Nom d'utilisateur" value="{{ data.name }}">
                </div>
                <div class="form-group col-md-6">
                    <input type="email" name="email"  required class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="E-mail" value="{{ data.email }}">
                </div>
            </div>
            <span>Mot de passe</span>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="password" name="password" required class="form-control" id="InputPassword" placeholder="Mot de passe">
                </div>
                <div class="form-group col-md-6">
                    <input type="password" name="passwordConfirm" required class="form-control" id="InputPasswordConfirm" placeholder="Confirmez le mot de passe">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Créer le compte</button>
        </div>
    </fieldset>
    <br>
    <a href="/login">(Déjà un compte?)</a>
</form>
{% endblock %}