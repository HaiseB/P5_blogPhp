{% extends "layout.twig" %}

{% block head %}
    <title>Espace de gestion</title>
{% endblock head %}

{% block content %}
<form method="post" action="" class="jumbotron text-center">
    <fieldset>
        <legend>Bienvenue dans l'espace d'administration</legend>
        <div class="col-md-8 offset-md-2">
            <div class="form-group">
                <input type="text" name="name" required class="form-control" id="InputName" placeholder="Nom d'utilisateur">
            </div>
            <div class="form-group">
                <input type="password" name="password" required class="form-control" id="InputPassword" placeholder="Mot de passe">
            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </fieldset>
</form>
{% endblock %}