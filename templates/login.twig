{% extends "layout.twig" %}

{% block head %}
    <title>Espace de gestion</title>
{% endblock head %}

{% block content %}
<div class="jumbotron text-center" >
    <form method="post" action="">
        <fieldset>
            <legend>Bienvenue dans l'espace membre</legend>
            <div class="col-md-4 offset-md-4">
                <div class="form-group">
                    <input type="text" name="name" required class="form-control" id="InputName" placeholder="Nom d'utilisateur" value="{{ data.name }}">
                </div>
                <div class="form-group">
                    <input type="password" name="password" required class="form-control" id="InputPassword" placeholder="Mot de passe" value="{{ data.password }}">
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>
        </fieldset>
    </form>
<hr>
    <a href="/create_account" class="btn btn-primary btn-block offset-md-4 col-md-4">Créer un compte</a>
    <a href="/reset_password" class="btn btn-primary btn-block offset-md-4 col-md-4">Mot de passe oublié</a>
</div>
{% endblock %}