{% extends "layout.twig" %}

{% block head %}
    <title>Les articles</title>
{% endblock head %}

{% block content %}
    <h1>Les derni√®res news</h1>
    {% for post in posts %}
        <hr>
        <div class="card mb-3">
            <h3 class="card-header">{{ post.name }}</h3>
            <img style="height: 200px; width: 100%; display: block;" src="posts_images/{{ post.id }}/{{ post.picture }}" alt="Card image">
            <div class="card-body">
                <p class="card-text">{{ post.catchphrase }}</p>
            </div>
            <div class="card-body">
                <a href="post/{{ post.id }}" class="card-link">link</a>
            </div>
            <div class="card-footer text-muted">
                {{ post.created_at }}
            </div>
        </div>
    {% endfor %}
{% endblock %}