#--------------------------------------------------
# Repository : /posts/
#--------------------------------------------------

# The serveur must follow the symbolicals links :
Options +FollowSymlinks

# Enable the URL rewriting mod :
RewriteEngine on

#--------------------------------------------------
# Rules :
#--------------------------------------------------

# Routing :
RewriteRule ^(.*).html$ index.php?p=$1 [L]

